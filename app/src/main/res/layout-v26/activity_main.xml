<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
            android:text="@string/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_id_std" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/edit_text_id_std" />
    <TextView
            android:text="@string/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_first_name"
            android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/edit_text_first_name" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/edit_text_first_name" />
    <TextView
            android:text="@string/last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_last_name" android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/edit_text_last_name" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/edit_text_last_name" />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_id_std" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="parent" android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_first_name" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_id_std"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp" android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_text_last_name" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_first_name" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:autofillHints=""/>
    <Button
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_send" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_last_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</RelativeLayout>

